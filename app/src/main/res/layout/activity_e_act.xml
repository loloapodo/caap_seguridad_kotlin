<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout android:background="@android:color/white"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.appbar.AppBarLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
        <include layout="@layout/my_toolbar" android:id="@+id/included"> </include>
    </com.google.android.material.appbar.AppBarLayout>

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"

>


<LinearLayout
    android:layout_marginTop="@dimen/spacing_large"
   android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    xmlns:android="http://schemas.android.com/apk/res/android">




    <com.google.android.material.textfield.TextInputLayout

        android:layout_marginTop="@dimen/editarusuariomargin"
        android:layout_marginBottom="@dimen/editarusuariomargin"
        android:layout_marginEnd="@dimen/editarusuariomarginleft"
        android:layout_marginStart="@dimen/editarusuariomarginleft"


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editactiv_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_nombre_actividad"
            android:textColorHint="@color/black"
            >
        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout

        android:layout_marginTop="@dimen/editarusuariomargin"
        android:layout_marginBottom="@dimen/editarusuariomargin"
        android:layout_marginEnd="@dimen/editarusuariomarginleft"
        android:layout_marginStart="@dimen/editarusuariomarginleft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"

        >


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editactiv_descrip"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="@string/hint_descripc"
            android:textColorHint="@color/black"
            >
        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout

        android:layout_marginTop="@dimen/editarusuariomargin"
        android:layout_marginBottom="@dimen/editarusuariomargin"
        android:layout_marginEnd="@dimen/editarusuariomarginleft"
        android:layout_marginStart="@dimen/editarusuariomarginleft"


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edittext_sitio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_nombre_sitio"
            android:textColorHint="@color/black"
            >
        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout

        android:layout_marginTop="@dimen/editarusuariomargin"
        android:layout_marginBottom="@dimen/editarusuariomargin"
        android:layout_marginEnd="@dimen/editarusuariomarginleft"
        android:layout_marginStart="@dimen/editarusuariomarginleft"


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edittext_ubicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_nombre_ubicacion"
            android:textColorHint="@color/black"
            >
        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>


    <Spinner
        android:id="@+id/spinner_anexar_formulario"
        android:layout_marginTop="@dimen/editarusuariomargin"
        android:layout_marginBottom="@dimen/editarusuariomargin"
        android:layout_marginEnd="@dimen/editarusuariomarginleft"
        android:layout_marginStart="@dimen/editarusuariomarginleft"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    </Spinner>




<LinearLayout
    android:layout_marginTop="@dimen/editarusuariomargin"
    android:layout_marginBottom="@dimen/editarusuariomargin"
    android:layout_marginEnd="@dimen/editarusuariomarginleft"
    android:layout_marginStart="@dimen/editarusuariomarginleft"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo de formulario: "
        >
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ninguno"
        android:id="@+id/textview_tipo_formulario"

        >
    </TextView>



</LinearLayout>



    <TextView
        android:layout_marginTop="@dimen/editarusuariomargin"
        android:layout_marginBottom="@dimen/editarusuariomargin"
        android:layout_marginEnd="@dimen/editarusuariomarginleft"
        android:layout_marginStart="@dimen/editarusuariomarginleft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Personal"
        >

    </TextView>







    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="@dimen/editarusuariomargin"
        android:layout_marginBottom="@dimen/editarusuariomargin"
        android:layout_marginEnd="@dimen/editarusuariomarginleft"
        android:layout_marginStart="@dimen/editarusuariomarginleft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycler_checks"
        >


    </androidx.recyclerview.widget.RecyclerView>




    <LinearLayout
        android:layout_marginTop="@dimen/spacing_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <ImageView
            android:layout_marginLeft="@dimen/spacing_middle"
            android:layout_marginRight="@dimen/spacing_middle"
            android:layout_width="@dimen/clock_size"
            android:layout_height="@dimen/clock_size"> </ImageView>
        <TextView
            android:textColor="@color/grey_40"
            style="@style/TextAppearance.MaterialComponents.Headline6"

            android:id="@+id/date_pick"
            android:layout_gravity="center"

            android:text="@string/SeleccionaDiaActividad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="MostrarDatePicker"
            >
        </TextView>


        <ImageView
            android:layout_marginLeft="@dimen/spacing_middle"
            android:layout_marginRight="@dimen/spacing_middle"
            android:layout_width="@dimen/clock_size"
            android:layout_height="@dimen/clock_size">

        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/spacing_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <ImageView
            android:layout_marginLeft="@dimen/spacing_middle"
            android:layout_marginRight="@dimen/spacing_middle"
            android:layout_width="@dimen/clock_size"
            android:layout_height="@dimen/clock_size"> </ImageView>
        <TextView
            android:textColor="@color/grey_40"
            style="@style/TextAppearance.MaterialComponents.Headline6"

            android:id="@+id/time_pick"
            android:layout_gravity="center"

            android:text="@string/SeleccionaHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="MostrarTimePicker"
            >
        </TextView>


        <ImageView
            android:layout_marginLeft="@dimen/spacing_middle"
            android:layout_marginRight="@dimen/spacing_middle"
            android:layout_width="@dimen/clock_size"
            android:layout_height="@dimen/clock_size">

        </ImageView>
    </LinearLayout>




<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    >


    <Button
        android:layout_marginEnd="@dimen/spacing_large"
        android:layout_marginTop="@dimen/editarusuariomargin"
        android:layout_marginBottom="@dimen/editarusuariomargin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancelar"
        android:layout_gravity="center"
        android:onClick="CancelarClick"
        >

    </Button>

    <Button
        android:layout_marginTop="@dimen/editarusuariomargin"
        android:layout_marginBottom="@dimen/editarusuariomargin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/aceptar"
        android:layout_gravity="center"
        android:onClick="AcpetarClick"
        >

    </Button>


</LinearLayout>




</LinearLayout>
</androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>